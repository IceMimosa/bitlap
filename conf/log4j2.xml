<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN" name="bitlap">

    <Properties>
        <Property name="bitlap.log.dir">logs</Property>
        <Property name="bitlap.log.file">bitlap.log</Property>
        <Property name="bitlap.log.level">info</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
